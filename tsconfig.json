{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2017",
    "jsx": "react",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "outDir": "build",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "dom",
      "webworker"
    ]
  },
  "include": [
    "declarations",
    "src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}
